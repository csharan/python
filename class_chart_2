#chart3 = mychart("hist_sample", "hist_chart")
#chart3.hitst_gram ([1, 8])
        
chart4 = mychart("bar_chart","bar_chart_1")
chart4.bar_chart(["2000", "2005", "2010","2015","2020","2025"],[3, 8, 1, 10,15,20])