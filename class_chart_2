import matplotlib.pyplot as plt
import numpy as np

class mychart:
    def __init__(self, cname, ctype): ## only one init method can be implemented
        self.cname1 = cname
        self.ctype1 = ctype

    def pie_chart(self,np1):
        y = np.array(np1)
        plt.pie(y)
        plt.title(self.cname1 + " " + self.ctype1)
        plt.show()
    
    def plt_chart(self,np1, np2):
        xpoints = np.array(np1)
        ypoints = np.array(np2)
        plt.plot(xpoints, ypoints, marker = 'o')
        plt.title(self.cname1 + " " + self.ctype1)
        plt.show()


    def hitst_gram(self,np1):
        y = np.array(np1)
        plt.hist(y)
        plt.title(self.cname1 + " " + self.ctype1)
        plt.show()


    def bar_chart(self,np1, np2):
        #x = np.array(np1)
        #y = np.array(np2)
        x = list(np1) # this works
        y = list(np2) # this works
        plt.bar(x,y)
        plt.title(self.cname1 + " " + self.ctype1)
        plt.show()

